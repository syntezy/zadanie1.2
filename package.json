{
  "name": "zadanie1.2",
  "version": "1.0.0",
  "description": "https://syntezy.github.io/zadanie1.2/",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all test:html",
    "test:html": "globstar nu-html-checker *.html",

    "watch": "npm-run-all watch:browsersync watch:sassprefixer",
    "watch:browsersync": "node_modules/.bin/browser-sync start --server --files css/*.css *.html",
    "watch:sassprefixer": "onchange sass/style.scss npm-run-all watch:sass watch:autoprefixer",
    "watch:sass": "node-sass --output-style expanded --source-map true -o css sass/scss",
    "watch:autoprefixer": "-d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css",
    
    "build": "npm-run-all watch build:clean build:sass",
    "build:clean": "rimraf css",
    "build:sass": "node-sass --output-style compact -o css sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syntezy/zadanie1.2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/syntezy/zadanie1.2/issues"
  },
  "homepage": "https://github.com/syntezy/zadanie1.2#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.7",
    "globstar": "^1.0.0",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.1.0",
    "rimraf": "^2.6.2"
  }
}
